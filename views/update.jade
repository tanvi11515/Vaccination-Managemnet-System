extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#333')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/people_vaccine/update/#{updatingVaccine._id}",active='true') Home  
            a.navbar-brand(href="/people_login") Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Update Vaccine details
                .image-block 
                img.className#IdName(src="/images/update.gif" alt="Image Title")
                form(method = "POST" , action="/people_vaccine/update/#{updatingVaccine._id}" ,name="updatevaccine") 
                    div(style="margin-bottom:50px;").col-sm-6.col-sm-offset-3
                        div.form-group
                            font(size='4') Vaccine Name: #{updatingVaccine.cname}
                        div.form-group
                            label(for='duration') Time Slot:
                            input#duration.form-control(type='text', placeholder = 'Time Slot', name ='duration',required='true')
                        div.form-group
                            label(for='start') Date:
                            input#start.form-control(type='text', placeholder = 'Date', name ='start',required='true')
                        div.form-group
                            label(for='Lecturer') Centre Name:
                            input#Lecturer.form-control(type='text', placeholder = 'Centre Name', name ='Lecturer',required='true')
                        div.form-group
                            label(for='seats') No of Slots:
                            input#seats.form-control(type='number', placeholder = 'No of Slots Available', name ='seats',required='true')
                        div.form-group
                            button.btn.btn-primary(type ='submit') Update Vaccine Details

                    div.footer