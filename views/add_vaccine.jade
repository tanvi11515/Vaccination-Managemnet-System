extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#333')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/addvaccine",active='true') Home
            a.navbar-brand(href="/people_login") Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Vaccines
                form(method = "POST" , action="/addvaccine",name="vaccine")
                    div(style="margin-bottom:50px;").col-sm-6.col-sm-offset-1
                        div.form-group
                            label(for='cname') Vaccine Name:
                            input#cname.form-control(type='text', placeholder = 'Vaccine Name', name ='cname',required='true')
                        div.form-group
                            label(for='duration') Time Slot:
                            input#duration.form-control(type='text', placeholder = 'Time Slot', name ='duration',required='true')
                        div.form-group
                            label(for='start') Date:
                            input#start.form-control(type='text', placeholder = 'Date', name ='start',required='true')
                        div.form-group
                            label(for='Lecturer') Centre Name:
                            input#Lecturer.form-control(type='text', placeholder = 'Centre Name', name ='Lecturer',required='true')
                        div.form-group
                            label(for='seats') No. of Slots:
                            input#seats.form-control(type='number', placeholder = 'No. of Slots', name ='seats',required='true')
                        div.form-group
                        button.btn.btn-primary(type ='submit') Add Vaccine slots 

                    div.footer