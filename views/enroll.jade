extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#00000')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/vaccine_enroll",active='true') Home
            a.navbar-brand(href="/people_login") Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h4.display-4.m-b-2 Book a vaccine Slot
                .image-block
                    img.className#IdName(src="/images/enroll.png" alt="Image Title")
                 table.table.table-inverse(border='2',width='100')
                        thead
                            tr(bgcolor='#1B6B84')
                                th Vaccine
                                th Description
                                th Available Slots Count
                                th
                        tbody
                            each c in VaccineList
                                tr(bgcolor='#fffff')
                                    td=c.cname
                                    td=c.duration
                                    td=c.seats
                                    td
                                        button.btn.btn-success(type='submit',onclick='window.location.href =\'/vaccine_enroll/#{c._id}\'') Book a Slot